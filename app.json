{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "org.xojs.panelenvoy",
  "version": "1.0.0",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "platforms": [
    "local"
  ],
  "name": {
    "en": "PanelEnvoy"
  },
  "description": {
    "en": "Adds support for MyBrand devices."
  },
  "category": [
    "energy"
  ],
  "permissions": [],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "Tim Wilkinson",
    "email": "tim.wilkinson@me.com"
  },
  "drivers": [
    {
      "name": {
        "en": "Enphase IQ Inverters"
      },
      "class": "solarpanel",
      "capabilities": [
        "measure_power"
      ],
      "platforms": [
        "local"
      ],
      "connectivity": [
        "lan"
      ],
      "discovery": "enphase-envoy",
      "pair": [
        {
          "id": "login_credentials",
          "template": "login_credentials",
          "options": {
            "logo": "../assets/logo.png"
          }
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "images": {
        "small": "/drivers/iq/assets/images/small.png",
        "large": "/drivers/iq/assets/images/large.png",
        "xlarge": "/drivers/iq/assets/images/xlarge.png"
      },
      "id": "iq"
    }
  ],
  "discovery": {
    "enphase-envoy": {
      "type": "mdns-sd",
      "mdns-sd": {
        "name": "enphase-envoy",
        "protocol": "tcp"
      },
      "id": "{{txt.serialnum}}"
    }
  }
}